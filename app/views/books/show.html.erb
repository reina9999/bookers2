
 <%= render 'books/book',user: @book.user %>
 <div class="container">
  <div class ="row">
    <div class="col-md-3">
 <div class="col-md-8 offset-md-1">
    <h2>Books detail</h2>
    <p>
    <table>
    <thead>
    <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th colspan="3"></th>
    </tr>
    </thead>

    <tr>
    <td><%= link_to (@user) do %>
    <%= image_tag @user.get_profile_image(100,100) %><br>
    <%= @user.name %>
    <% end %>
    </td>
     <td><%= link_to @book.title, book_path(@book) %></td>
     
     <td><%= @book.body %></td>
     <td><% if @book.user == current_user %>
     <%= link_to"Edit",edit_book_path(@book) %>
     <%= link_to "Destroy",book_path(@book), method: :delete,"data-confirm" => "Are you sure?" %>
     <% end %>
     </td>
     
    </tr>

　　</tbody>
    </table>
    </p>
    </div>
    </div>
  </div>
