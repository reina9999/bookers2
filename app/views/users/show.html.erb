<div class="container">
  <div class ="row">
    <div class="col-md-3">
     <%= render 'books/book', book: @user,user: User.find(params[:id]) %>
     </div>
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th></th>
    <td></td>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
    <td></td>
    <td>
    <%= link_to user_path(@user.id) do %>
    <%= image_tag book.user.get_profile_image(100,100) %>
    <% end %>
    </td>
    <td><%= link_to book.title, book_path(book.id) %></td>
    <td><%= book.body %></td>
    </tr>
    <% end %>
    </thead>
    </table>
    </div>
  </div>
  </div>
